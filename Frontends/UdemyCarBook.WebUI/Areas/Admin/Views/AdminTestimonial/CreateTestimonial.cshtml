@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Sayfası Veri Giriş Alanı </h4>
                        <p class="card-subtitle mb-4">
                            Müşterilerinizin sizin hakkınızda söylemiş oldukları ifadeleri yorum olarak ekleyip düzenleyebildiğiniz sayfa aşağıda yer almaktadır.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referans Ad-Soyad Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Unvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referans Unvanını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="ImageUrl" placeholder="Görsel seçiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Referans Görsel</label>
                                <textarea rows="5" asp-for="Comment" class="form-control">Yorum...</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

