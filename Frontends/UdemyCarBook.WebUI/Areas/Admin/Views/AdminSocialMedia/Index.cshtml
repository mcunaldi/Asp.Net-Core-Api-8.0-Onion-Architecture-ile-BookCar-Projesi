 @model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Hesap Linkleri Yönetimi</h4>
                        <p class="card-subtitle mb-4">
                            Kullandığınız sosyal medya hesaplarına ait bilgileri yönetebileceğiniz sayfadır.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">

                                @if (Model.Any())
                                {
                                    count++;
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Sosyal Medya</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Aç</th>
                                        </tr>
                                    </thead>
                                }
                                else
                                {
                                    <span><b>Hiçbir kayıt bulunamadı. Aşağıdaki butondan ekleyebilirsiniz.</b></span>
                                }
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Name</td>
                                            <td><a href="/Admin/AdminSocialMedia/RemoveSocialMedia/@item.SocialMediaID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/Admin/AdminSocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-outline-success">Aç</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/AdminSocialMedia/CreateSocialMedia" class="btn btn-outline-primary mt-2">Yeni Soyal Medya Girişi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


