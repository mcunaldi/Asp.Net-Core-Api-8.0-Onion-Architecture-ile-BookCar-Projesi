@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Bloglara ait kategorilerle ilgili işlemlerin gerçekleştirileceği sayfadır. Kategori güncelleme yaparken bilgileri eksiksiz girmeye özen gösterelim.'
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="CategoryID"/>
                            <div class="form-group">
                                <label for="exampleInputName">Kategori Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Kategori Adını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Kategori Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

